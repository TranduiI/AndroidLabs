<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_toast4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDFAF598"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/toast4" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Кнопка 4 - 1"
        android:textSize="40dp"
        android:background="@color/custToast4T1Back"
        android:textColor="@color/custToast4T1Text"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Кнопка 4 - 2"
        android:textSize="40dp"
        android:background="@color/custToast4T2Back"
        android:textColor="@color/custToast4T2Text"/>



</LinearLayout>